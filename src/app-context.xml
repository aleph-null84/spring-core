<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangleSetter" class="com.yuriy.sample.Triangle">
    	<property name="type" value="Equilateral (Setter)" />
    </bean>
    
    <bean id="triangleConstructor" class="com.yuriy.sample.Triangle">
    	<constructor-arg type="java.lang.String" value="Equilateral (Constructor)" />
    </bean>

</beans>